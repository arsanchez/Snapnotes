<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.argenis.snapnotes.MainFragment"
    android:background="@color/accent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:src="@android:drawable/ic_menu_camera"
        fab:menu_colorNormal="@color/primary"
        fab:menu_colorPressed="@color/accent"
        fab:menu_colorRipple="@color/black">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_cnote_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera"
            fab:fab_label="@string/action_new_photor"
            fab:fab_colorNormal="@color/primary"
            fab:fab_colorPressed="@color/accent"
            fab:fab_colorRipple="@color/black"
          />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_tnote_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            fab:fab_label="@string/action_new_noter"
            fab:fab_colorNormal="@color/primary"
            fab:fab_colorPressed="@color/accent"
            fab:fab_colorRipple="@color/black"
             />



    </com.github.clans.fab.FloatingActionMenu>

</FrameLayout>
